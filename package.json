{
  "name": "daydreamer",
  "description": "Daydreamer is a reusable datepicker component for React.",
  "main": "dist/daydreamer.js",
  "module": "dist/daydreamer.js",
  "types": "dist/daydreamer.d.ts",
  "exports": {
    ".": {
      "import": "./dist/daydreamer.js",
      "require": "./dist/daydreamer.cjs"
    },
    "./dist/index.css": "./dist/index.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aaarslan/daydreamer.git"
  },
  "keywords": ["datepicker", "calendar", "react", "daydreamer"],
  "author": "A. Arslan",
  "license": "MIT",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --p ./tsconfig-build.json && vite build",
    "lint": "biome check --write lib/*"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@evilmartians/lefthook": "^1.6.18",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "terser": "^5.31.1",
    "typescript": "^5.5.2",
    "vite": "^5.3.2",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-lib-inject-css": "^2.1.1"
  },
  "sideEffects": ["**/*.css"]
}
